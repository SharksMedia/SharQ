{
    "name": "sharksmedia/sharq",
    "description": "A query builder for PHP, heavely inspired by KnexJS.",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "scripts": {
        "unit-tests": "./vendor/bin/codecept run unit",
        "unit-tests-debug": "./vendor/bin/codecept run unit --debug",
        "integration-tests": "./vendor/bin/codecept run integration",
        "codecept-build": "./vendor/bin/codecept build",
        "phpdoc": "./bin/phpDocumentor.phar -d src/ -t docs/ --force"
    },
    "authors": [
        {
            "name": "Magnus Schmidt Rasmussen",
            "email": "magnus@sharksmedia.dk"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sharksmedia\\SharQ\\": "src/"
        }
    },
    "require-dev": {
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "*",
        "codeception/module-db": "^2.0"
    },
    "require": {
        "php": ">=7.4.33"
    }

}
